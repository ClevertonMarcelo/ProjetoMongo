{
    "openapi": "3.0.0",
    "info": {
        "title": "API-Animal",
        "description": "Essa API fornece recursos para persistência de animal em um banco de dados",
        "contact": {
            "email": "ortoncelli@utfpr.edu.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8081/api",
            "description": "rota para API"
        }
    ],
    "paths": {
        "/animal": {
            "post": {
                "summary": "Cadastro de animal",
                "description": "Essa rota irá cadastrar produtos",
                "tags": [
                    "animal"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/animal"
                            },
                            "examples": {
                                "animal": {
                                    "value": {
                                        "nome": "Gelo",
                                        "ingredientes": "Água",
                                        "preparo": "Congelar"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/animal"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/animal/{id}": {
            "get": {
                "summary": "Busca animal pelo Id",
                "description": "Essa rota irá buscar uma por animal pelo ID.",
                "tags": [
                    "Animal"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID da animal no banco de dados.",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Animal"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Animal": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "ingredientes": {
                        "type": "string"
                    },
                    "preparo": {
                        "type": "string"
                    }
                }
            }
        }
    }
}